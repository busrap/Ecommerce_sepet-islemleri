
@{
    ViewBag.Title = "Marka Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section head{
    <link href="/Templates/Admin/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />


}
<br /><br /><br />

<div class="row">

    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Marka Ekle
                <br /><br /><br />
            </header>
            <div class="panel-body">
                @* enctype="multipart/form-data" demediğimiz zaman Resim seç alanına bulunan input name="fileUpload" controller da resim nesnesi null gelmektedir.
                    yani view da seçilen resim formdan action'a post edilemyor*@
                <form action="/Admin/MarkaEkle" enctype="multipart/form-data" class="form-horizontal tasi-form" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Marka Adı</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="Adi">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" name="Aciklama">
                            <span class="help-block">Eklenen markaya ait birkaç bilgi girsen iyi olur.</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">Marka Resim</label>
                        <div class="controls col-md-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <span class="btn btn-white btn-file">
                                    <span class="fileupload-new"><i class="icon-paper-clip"></i>resim seç</span>

                                    <input name="fileUpload" type="file" class="default" />
                                </span>

                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

    </div>
</div>

<script src="js/common-scripts.js"></script>

<script src="/Templates/Admin/assets/fancybox/source/jquery.fancybox.js"></script>

<script type="text/javascript">
    $(function () {
     
        jQuery(".fancybox").fancybox();
    });

</script>