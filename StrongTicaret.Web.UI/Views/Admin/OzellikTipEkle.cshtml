
@{
    ViewBag.Title = "OzellikTipEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@* Kategorileri select inputun da listeletmek istediğm için model yöntemini kullandım *@

@model IEnumerable<StrongTicaret.Web.UI.Models.Kategori>

<br /><br /><br />
<div class="row">

    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Özellik tipi eklemek için aşağıda ki alanları doldurunuz...
            </header>
    
            <div class="panel-body">
              
                <form action="/Admin/OzellikTipEkle" class="form-horizontal tasi-form" method="post">


                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Özellik Tip Adı</label>
                        <div class="col-sm-10">
                            @* OzellikTip Class'ımda Adi prop'una değer gönderiyorum(name="Adi")*@
                            <input type="text" class="form-control" name="Adi">
                        </div>
                    </div>





                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Açıklama</label>
                        <div class="col-sm-10">
                            @* OzellikTip Class'ımda Aciklama prop'una değer gönderiyorum(name="Aciklama")*@
                            <input type="text" class="form-control" name="Aciklama">
                            <span class="help-block">Eklenen özelliğin tipine ait birkaç açıklamada bulun...</span>
                        </div>
                    </div>



                    <div class="col-sm-10">
                        <span class="help-block">Eklenen özelliğin Kategorisi</span>
                    </div>




                    @* OzellikTip Class'ımda KategoriID prop'una bu select ile kategori bilgisini gönderiyorum *@
                    <select class="form-control input-sm m-bot15" name="KategoriID">
                        @foreach (var item in Model)
                        {
                            <option value="@item.Id">@item.Adi</option>
                            //Select'de kategori adı görüntülenecek ama seçilip post edilen değer(OzeliikTip Class'ına) seçilen kategori adının ID değeri(value="@item.Id" sayesinde)
                        }
                    </select>


                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

    </div>
</div>

