

@model IEnumerable<StrongTicaret.Web.UI.Models.OzellikTip>


<script src="~/Templates/Admin/js/jquery-1.8.3.min.js"></script>

<script>
    $("#tipler").change(function myFunction() {
        var id = $(this).val();


        $.ajax({
            type: "GET",
            url: "/Admin/UrunOzellikDegerWidget",
            data: { tipId: id },
            success: function myFunction(veri) {
                $("#deger").html('');
                $("#deger").html(veri);

            },
            error: function myFunction() {

            },
        })
    });
</script>
<div class="form-group">
    <label class="col-lg-2 control-label">Özellik Tip</label>
    <div class="col-lg-10">

        <select class="form-control input-sm m-bot15" id="tipler" name="OzellikTipID">
            <option value="" disabled selected>Ürünün özelliğine ait bir özellik tipi belirleyiniz...</option>
            @foreach (var item in Model)
            {
                <option value="@item.Id">@item.Adi</option>
            }
        </select>

    </div>
</div>